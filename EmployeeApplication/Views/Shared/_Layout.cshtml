<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-light bg-light bg-opacity-100 justify-content-between">
        <a class="navbar-brand">
            <img src="https://www.whiztekcorp.com//assets/img/wt.png" width="250" height="40" class="d-inline-block align-top ps-5" alt="">
        </a>
        <div class="d-flex navbar-text pe-3">
            <div class="m-2"><button class="btn btn-secondary" type="button" onclick="location.href='@Url.Action("Login", "Account")'">Log in</button></div>
            <div class="m-2"><button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Register", "Account")'">Sign up</button></div>
            <button id="logoutButton">Logout</button>
        </div>
    </nav>
    <div class="mx-4">
        <div class="row">
            <div class="col-2">
                <div class="mt-5 ms-3">
                    <ul class="list-unstyled">
                        <li>
                            <a href="~/User/Index" class="text-decoration-none"><h4>Home</h4></a>
                        </li>
                        <li>
                            <a href="~/User/Create" class="text-decoration-none"><h4>Create</h4></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-10">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="row bg-light py-4 ">
        <div class="col-12 d-flex justify-content-center ">
            <p>
                Copyright 2023 & All Rights Reserved By -
                <a href="" class="text-decoration-none" style="color:#F15E2E "><b>Whiztek Corp</b></a>
            </p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Login form submission
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();
                var username = $('#username').val();
                var password = $('#password').val();

                // Perform AJAX request to the server to authenticate the user
                $.ajax({
                    url: '/Account/Login',
                    type: 'POST',
                    data: { username: username, password: password },
                    success: function (result) {
                        // Handle successful login, e.g., redirect to a dashboard page
                    },
                    error: function (error) {
                        // Handle login error, e.g., display an error message
                    }
                });
            });

            // Register form submission
            $('#registerForm').on('submit', function (e) {
                e.preventDefault();
                var username = $('#username').val();
                var password = $('#password').val();
                // Get other registration field values

                // Perform AJAX request to the server to register the user
                $.ajax({
                    url: '/Account/Register',
                    type: 'POST',
                    data: { username: username, password: password },
                    success: function (result) {
                        // Handle successful registration, e.g., display a success message
                    },
                    error: function (error) {
                        // Handle registration error, e.g., display an error message
                    }
                });
            });

            // Logout button click
            $('#logoutButton').on('click', function () {
                // Perform AJAX request to the server to log out the user
                $.ajax({
                    url: '/Account/Logout',
                    type: 'POST',
                    success: function (result) {
                        // Handle successful logout, e.g., redirect to the login page
                    },
                    error: function (error) {
                        // Handle logout error, e.g., display an error message
                    }
                });
            });
        });
    </script>
</body>

</html>
