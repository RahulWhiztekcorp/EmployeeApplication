@model EmployeeApplication.Models.Employee_tbl
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">FirstName : </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.FirstName, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(s => s.FirstName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">LastName: </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.LastName, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Age : </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Age, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.Age, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Mobile Number: </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.MobileNumber, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.MobileNumber, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Email: </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Email, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Username: </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Username, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Department: </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.DepartmentId, new { @clsss = "form-control", @placeholder = "Enter your DeparmentId" })
                    @Html.ValidationMessageFor(m => m.DepartmentId, null, new { @class = "text-danger" })

                    @*@{
                            List<EmployeeApplication.Models.Department_tbl> li = new List<EmployeeApplication.Models.Department_tbl>();
                            foreach (var item in ViewBag.Departments)
                            {
                                li.Add(item);
                            }
                            SelectList items = new SelectList(li.ToList());
                        }
                        @Html.DropDownListFor(m => m.DepartmentId, items.ToList(), "-Select Department-", new { @clas = "form-control" })*@
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <label class="control-label ">Salary(CTC): </label>
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Salary, new { @clsss = "form-control", @placeholder = "Enter your Username" })
                    @Html.ValidationMessageFor(m => m.Salary, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-6 d-flex justify-content-end">
                    <button class="btn btn-danger">
                        @Html.ActionLink("Cancel", "Index", "User", new { @class = "text-decoration-none text-white" })
                    </button>
                </div>
                <div class="col-sm-6">
                    <button type="submit" value="Create" class="btn btn-success px-5 me-2">
                        Save
                    </button>
                </div>
            </div>
        </div>
    }
</div>
